<?xml version="1.0" encoding="utf-8"?>

<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:cv="clr-namespace:Mobile.Solution.Infrastructure.CustomControls"
      x:Class="Mobile.Solution.Infrastructure.CustomControls.CarouselView">
    <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition x:Name="LabelsRow" />
    </Grid.RowDefinitions>
    <cv:CarouselLayout x:Name="Content" />
    <cv:ItemsView HorizontalOptions="Center" BackgroundColor="Transparent" Grid.Row="1" x:Name="Items" />
</Grid>